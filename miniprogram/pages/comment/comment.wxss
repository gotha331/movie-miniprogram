.comment {
  position: relative;
}
.comment .detail-container {
  height: 400rpx;
  border: 1px solid #000;
  filter: blur(40rpx);
  opacity: 0.4;
}
.comment .detail-mask {
  width: 100%;
  height: 400rpx;
  background-color: #333;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.comment .detail {
  width: 100%;
  height: 400rpx;
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  padding: 20rpx;
  box-sizing: border-box;
}
.comment .detail .detail-img {
  width: 260rpx;
  height: 360rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
}
.comment .detail .detail-info {
  flex: 1;
  line-height: 60rpx;
}
.comment .detail .detail-info view,
.comment .detail .detail-info text {
  color: #ddd;
  font-size: 24rpx;
}
.comment .detail .detail-info .detail-info-title {
  font-size: 36rpx;
  font-weight: 700;
}
.comment .detail .detail-info .detail-info-rate {
  color: #FFBF26;
  font-size: 30rpx;
  font-weight: 700;
}
.comment .summary {
  font-size: 28rpx;
  text-indent: 2em;
  margin-bottom: 20rpx;
}
.comment .comment-rate {
  padding-top: 10rpx;
  padding-left: 20rpx;
}
.comment .comment-submit-btn {
  text-align: center;
}
